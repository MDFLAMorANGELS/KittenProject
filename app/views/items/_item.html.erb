<div id="<%= dom_id item %>">

    <strong>Title:</strong>
    <%= item.title %>
    <strong>Description:</strong>
    <%= item.description %>
    <strong>Price:</strong>
    <%= item.price %>
    <strong>Image url:</strong>
    <%= item.image_url %>
    <%= form_with(url: carts_path) do |f| %>
    <%= f.hidden_field :id, value: item.id %>
    <%= f.number_field :quantity, value: 0, min: 1 %>
    <%= f.submit "Add To Cart" %>
    <% end %>


</div>
