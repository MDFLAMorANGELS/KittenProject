<% @cart.orders.each do |order| %>
<% item = order.item %>
<% end %>

<div id="<%= "cart-#{item.id}" %>">

    <strong>Title:</strong>
    <%= item.title %>
    <strong>Description:</strong>
    <%= item.description %>
    <strong>Price:</strong>
    <%= item.price %>
    <strong>Image url:</strong>
    <%= item.image_url %>
    <%= form_with(url: carts_path) do |f| %>
    <%= f.hidden_field :id, value: item.id %>
    <%= f.number_field :quantity, value: order.quantity, min: 0 %>
    <%= f.submit "Add To Cart" %>
    <% end %>

        <%= form_with(url: carts_remove_path) do |f| %>
        <%= f.hidden_field :id, value: order.id %>
        <%= f.submit "Delete from the card" %>
        <% end %>

        <strong>Total :</strong>
        <%= order.total %>


</div>

<div id="<%= dom_id order %>">
</div>
